@model IEnumerable<UnchurisApp.Models.Advertisement>

@{
  ViewBag.Title = "Timeline";
}

@section RightPanel {
    @{ Html.RenderAction("Create");
    }
}

@section LeftPanel {
    @if (Model.Any()) {
        foreach (var advertisement in Model) {
        @Html.Partial("_AdvertisementPartial", advertisement);
        }
    } else {
    <p>Quick! Post a Advertisement!</p>
    }
}